{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalEnv": [
    "PORT",
    "JWT_SECRET",
    "DATABASE_URL",
    "WORLD_SERVER_SECRET",
    "MEDIASOUP_LISTEN_IP",
    "MEDIASOUP_ANNOUNCED_IP",
    "MEDIASOUP_RTC_MIN_PORT",
    "MEDIASOUP_RTC_MAX_PORT",
    "K8S_NODE_NAME",
    "K8S_NODE_EXTERNAL_IP",
    "BACKEND_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
